@model IEnumerable<InternetShop.WebUI.Models.OrderModels.OrderInfoModel>

@{
    ViewBag.Title = "Админ панель: Список заказов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidemenu{
    <div>
        <ul class="nav nav-stacked nav-pills">
            <li role="presentation">
                <a href="@Url.Action("ProductList")">
                    <span class="glyphicon glyphicon-phone"></span>
                    &nbsp;Товары
                </a>
            </li>
            <li role="presentation">
                <a href="@Url.Action("UserList")">
                    <span class="glyphicon glyphicon-user"></span>
                    &nbsp;Пользователи
                </a>
            </li>
            <li role="presentation" class="active">
                <a href="@Url.Action("OrderList")">
                    <span class="glyphicon glyphicon-transfer"></span>
                    &nbsp;Заказы
                </a>
            </li>
        </ul>

    </div>
}

@section scripts
{
    @Scripts.Render("~/Scripts/modal.js")
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>
            <span class="glyphicon glyphicon-list"></span> &nbsp;
            Списко заказов
        </h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Заказчик</th>
                <th class="text-center">Адрес</th>
                <th class="text-center">Дата</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.OrderId</td>
                    <td class="text-center">@item.UserSurname @item.UserName (@item.UserEmail)</td>
                    <td class="text-center">@item.UserAddress</td>
                    <td class="text-center">@item.Date</td>
                    <td>
                        <a onclick="showInfo('@Url.Action("OrderInfo", "Order", new {orderId = item.OrderId})')"
                           data-toggle="tooltip" data-placement="top" title="Информация о заказе" class="btn btn-info">
                            <span class="glyphicon glyphicon-info-sign"></span>
                        </a>
                        <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Удалить заказ">
                            <span class="glyphicon glyphicon-minus"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>