<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
@RenderSection("modal", required: false)
<nav id="top" class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <a class="navbar-brand" href="@Url.Action("List", "Content", new {page = 1})">
            <span class="glyphicon glyphicon-send"></span>InternetShop
        </a>
        <a class="btn btn-default navbar-btn pull-right" href="@Url.Action("ProductList", "Admin")">
            <span class="glyphicon glyphicon-queen"></span>
            Администрирование
        </a>
    </div>
</nav>
<div class="row panel">
    <div class="col-md-1 col-md-offset-2">
        @RenderSection("sideMenu")
    </div>
    <div class="col-md-6">
        @RenderBody()
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Scripts/sidebar.js")
@RenderSection("scripts", required: false)
</body>

</html>
