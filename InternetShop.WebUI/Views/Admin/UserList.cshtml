@model IEnumerable<InternetShop.WebUI.Models.AccountModels.UserViewModel>

@{
    ViewBag.Title = "Админ панель: Список пользователей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidemenu{
    <div>
        <ul class="nav nav-stacked nav-pills">
            <li class="active" role="presentation">
                <a href="#">
                    <span class="glyphicon glyphicon-plus"></span>
                    &nbsp;Добавить<br/>
                    пользователя
                </a>
            </li>
            <li>
                <hr />
            </li>
            <li role="presentation">
                <a href="@Url.Action("ProductList")">
                    <span class="glyphicon glyphicon-phone"></span>
                    &nbsp;Товары
                </a>
            </li>
            <li class="active" role="presentation">
                <a href="@Url.Action("UserList")">
                    <span class="glyphicon glyphicon-user"></span>
                    &nbsp;Пользователи
                </a>
            </li>
        </ul>

    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>
            <span class="glyphicon glyphicon-list"></span> &nbsp;
            Списко пользователей
        </h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Email</th>
                <th class="text-center">Фамилия и имя</th>
                <th class="text-center">Адрес</th>
                <th class="text-center">ID</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td clas="text-center">@item.Email</td>
                    <td>
                        <a href="#">@(item.Surname ?? "[нет фамилии]") @item.Name</a>
                    </td>
                    <td class="text-center">@(item.Address ?? "[нет адреса]")</td>
                    <td class="text-center">
                        @item.UserId
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


