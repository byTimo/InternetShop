@model InternetShop.WebUI.Models.UserInfoModels.UserInfoModel
@{
    ViewBag.Title = "Информация о пользователе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section sidemenu
{
    <ul class="nav nav-stacked nav-pills">
        <li role="presentation" class="active">
            <a href="@Url.Action("List", "Content")">
                <span class="glyphicon glyphicon-new-window"></span>
                &nbsp;Вернуться к списку <br/> товаров
            </a>
        </li>
        <li>
            <hr />
        </li>
        <li role="presentation">
            <a href="#">
                <span class="glyphicon glyphicon-pencil"></span>
                &nbsp;Изменить информацию
            </a>
        </li>
        <li role="presentation">
            <a href="№">
                <span class="glyphicon glyphicon-text-background"></span>
                &nbsp;Сборсить пароль
            </a>
        </li>
    </ul>
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>
            <span class="glyphicon glyphicon-user"></span>
            &nbsp;Информация о пользователе
        </h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <tr>
                <td>@Html.LabelFor(m => m.Name, new {@class = "control-label"})</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Surname, new {@class = "control-label"})</td>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Email, new {@class = "control-label"})</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Address, new {@class = "control-label"})</td>
                <td>@Model.Address</td>
            </tr>
        </table>
    </div>
    <div class="panel-footer">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h4>
                    <span class="glyphicon glyphicon-transfer"></span>
                    &nbsp;Заказы
                </h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Идентификатор заказ</th>
                        <th>Дата заказа</th>
                        <th>Действия</th>
                    </tr>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.Date</td>
                            <td class="text-center">
                                <a href="#" class="btn-default" data-toggle="tooltip" data-placement="top" title="Информация о заказе" 
                                   onclick="showInfo('@Url.Action("OrderInfo", new {orderId = order.OrderId})')">
                                    <span class="glyphicon glyphicon-info-sign"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/modal.js")
    <script type="text/javascript">
        $(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>   
}

